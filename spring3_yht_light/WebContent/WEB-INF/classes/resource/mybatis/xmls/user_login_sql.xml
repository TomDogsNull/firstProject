<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="login">

	
	<!-- 로그인 체크 -->
	<select id="login.getUserInfo" parameterType="org.yht.domain.test01.MemberVo" resultType="org.yht.domain.test01.MemberVo">
		SELECT ID,
			   PWD, 
			   NAME,
			   EMAIL,
			   ADDRESS1,
			   ADDRESS2,
			   AUTH,
			   PHONE,
			   DEL,
			   AUTHKEY,
			   AUTHSTATUS 
		  FROM TEST01_MEMBER
		 WHERE ID = #{id}
	</select>
	

	
</mapper>